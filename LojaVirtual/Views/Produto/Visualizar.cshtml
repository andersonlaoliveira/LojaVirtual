@model LojaVirtual.Models.ProdutoAgregador.Produto

<br style="clear: both" />

<div class="container">
    <section id="product_detail">
        <div id="code_prod_detail">
            <div class="card">
                <div class="row no-gutters">
                    <aside class="col-sm-5 border-right">
                        <article class="gallery-wrap">
                            <div class="img-big-wrap">
                                <div>

                                    @if (Model.Imagens != null && Model.Imagens.Count > 0)
                                    {
                                        <a href="@Model.Imagens.ElementAt(0).Caminho" data-fancybox><img src="@Model.Imagens.ElementAt(0).Caminho"></a>
                                    }
                                    else
                                    {
                                        <a href="" data-fancybox><img src="~/img/imagem-padrao.png"></a>
                                    }
                                </div>
                            </div> <!-- slider-product.// -->
                            <div class="img-small-wrap">
                                @if (Model.Imagens != null && Model.Imagens.Count > 0)
                                {
                                    @foreach (Imagem imagem in Model.Imagens)
                                    {
                                        <div class="item-gallery"> <img src="@imagem.Caminho"></div>
                                    }
                                }
                            </div> <!-- slider-nav.// -->
                        </article> <!-- gallery-wrap .end// -->
                    </aside>
                    <aside class="col-sm-7">
                        <article class="p-5">
                            <h3 class="title mb-3">@Model.Nome</h3>

                            <div class="mb-3">
                                <var class="price h3 text-warning">
                                    <span class="currency"></span><span class="num">@Model.Valor.ToString("C")</span>
                                </var>
                                <span>/unid</span>
                            </div> <!-- price-detail-wrap .// -->
                            <dl>
                                <dt>Descrição</dt>
                                <dd>
                                    <p>
                                        @Model.Descricao
                                    </p>
                                </dd>
                            </dl>
                            <dl class="row">
                                <dt class="col-sm-3">Peso(kg)</dt>
                                <dd class="col-sm-9">@Model.Peso</dd>

                                <dt class="col-sm-3">Largura</dt>
                                <dd class="col-sm-9">@Model.Largura</dd>

                                <dt class="col-sm-3">Comprimento</dt>
                                <dd class="col-sm-9">@Model.Comprimento</dd>

                                <dt class="col-sm-3">Altura</dt>
                                <dd class="col-sm-9">@Model.Altura</dd>

                                <dt class="col-sm-3">Estoque</dt>
                                <dd class="col-sm-9">@Model.Estoque</dd>
                                @{
                                    /* REALIZAR A CORREÇÃO NESTE ITEM
                                     * AQUI FICA A COLUNA DO DETALHE DO PRODUTO (COR E TAMANHO)
                                    <dt class="col-sm-3">Model#</dt>
                                    <dd class="col-sm-9">12345611</dd>

                                    <dt class="col-sm-3">Color</dt>
                                    <dd class="col-sm-9">Black and white </dd>

                                    <dt class="col-sm-3">Delivery</dt>
                                    <dd class="col-sm-9">Russia, USA, and Europe </dd>
                                    */
                                }
                            </dl>
                            @{
                                /* AVALIAÇÃO DO PRODUTO
                                <div class="rating-wrap">

                                    <ul class="rating-stars">
                                        <li style="width:80%" class="stars-active">
                                            <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </li>
                                        <li>
                                            <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </li>
                                    </ul>
                                    <div class="label-rating">132 reviews</div>
                                    <div class="label-rating">154 orders </div>
                                </div> <!-- rating-wrap.// -->
                                */
                            }
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <dl class="dlist-inline">
                                        @{
                                            /* AQUI FICAVA A QUANTIDADE QUE REMOVEMOS - AULA 226
                                        <dt>Quantity: </dt>
                                        <dd>
                                            <select class="form-control form-control-sm" style="width:70px;">
                                                <option> 1 </option>
                                                <option> 2 </option>
                                                <option> 3 </option>
                                            </select>
                                        </dd>
                                        */
                                        }
                                    </dl>  <!-- item-property .// -->
                                </div> <!-- col.// -->
                                @{
                                    /* TABELA DE TAMANHOS DOS PRODUTOS
                                <div class="col-sm-7">
                                    <dl class="dlist-inline">
                                        <dt>Size: </dt>
                                        <dd>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                                                <span class="form-check-label">SM</span>
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                                                <span class="form-check-label">MD</span>
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                                                <span class="form-check-label">XXL</span>
                                            </label>
                                        </dd>
                                    </dl>  <!-- item-property .// -->
                                </div> <!-- col.// -->
                                */
                                }
                            </div> <!-- row.// -->
                            <hr>
                            <a asp-controller="CarrinhoCompra" asp-action="AdicionarItem" asp-route-id="@Model.Id" class="btn  btn-outline-primary"> <i class="fas fa-shopping-cart"></i> Adicionar ao carrinho </a>
                        </article> <!-- card-body.// -->
                    </aside> <!-- col.// -->
                </div>
            </div>
            <br />
            <br />

            <div class="row">
                <div class="col-md-12">
                    <article class="box">
                        <figure class="itemside">
                            <div class="aside align-self-center">
                            </div>
                            <figcaption class="text-wrap">
                                <h5 class="title">Especificações do Produto</h5>
                                <p class="text-muted">
                                    @Model.EspecificacoTecnica
                                </p>
                            </figcaption>
                        </figure>
                    </article>
                </div>
            </div>

        </div>
    </section>
</div>